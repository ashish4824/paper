# Environment variables for Paper.Social application

# Application settings
APP_NAME={{ app_name }}
NODE_ENV={{ environment | default('production') }}
PORT=3000

# Database settings (if needed)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=papersocial
# DB_USER=dbuser
# DB_PASSWORD={{ db_password | default('changeme') }}

# API keys and secrets (use Ansible Vault for production)
API_SECRET={{ api_secret | default('your-secret-key-here') }}

# Cloud provider information
CLOUD_PROVIDER={{ inventory_hostname | regex_search('aws') | ternary('aws', 'ibm') }}

# Monitoring settings
PROMETHEUS_ENDPOINT=http://prometheus:9090
LOKI_ENDPOINT=http://loki:3100